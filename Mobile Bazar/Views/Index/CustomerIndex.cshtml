<div id="Contact" class="container-fluid">
    <div class="text-center">
        <h1 style="color: #f82f2f">GET IN TOUCH</h1>
    </div>
    <div class="row d-flex justify-content-center">
        @using (Html.BeginForm("ContactAdmin_Customer", "Index", FormMethod.Post, htmlAttributes: new
        {
            @class = "col-md-8"
        }))
        {
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" name="email" class="form-control col-12 border" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Message</label>
                <textarea class="form-control col-12 border" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button class="btn btn-primary mt-4 bt" type="submit">Send</button>

        }
    </div>

</div>

