                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputquant">OS</label>
                        @Html.EditorFor(model => model.OperatingSystem, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "Android Pi" }
                        })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputquant">Chipset</label>
                        @Html.EditorFor(model => model.Chipset, new
                        {
                            htmlAttributes =
