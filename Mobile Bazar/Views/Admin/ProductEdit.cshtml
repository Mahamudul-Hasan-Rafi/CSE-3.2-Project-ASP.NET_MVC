                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputquant">ROM</label>
                        @Html.EditorFor(model => model.ROM, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "64GB" }
                        })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputsold">RAM</label>
                        @Html.EditorFor(model => model.RAM, new
                        {
                            htmlAttributes =
