                        })
                    </div>
                </div>

            </fieldset>

            <fieldset class="border rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Battery</legend>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputquant">Type</label>
                        @Html.EditorFor(model => model.BatteryType, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "4500mAh" }
                        })
                    </div>
                </div>

            </fieldset>

            <fieldset class="border rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Features</legend>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="">Sensors</label>
                        @Html.EditorFor(model => model.Sensors, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "Accelerator" }
