                </div>

            </fieldset>

            <fieldset class="border rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Network</legend>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label for="inputquant">Technology</label>
                        @Html.EditorFor(model => model.NetworkTechnology, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "GSM" }
                        })
                    </div>
                </div>
            </fieldset>

            <fieldset class="border rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Product Image</legend>
                <div class="form-group">
                    <label for="inputfile">Upload Product Image:</label>
                    <input type="file" name="ImageFile" id="inputfile" class="ml-5" />
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary btn-block px-5 py-2 mt-5 mb-5">Update</button>
        }
    </div>
</div>
