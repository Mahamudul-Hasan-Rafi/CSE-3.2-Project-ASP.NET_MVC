                    <div class="form-group col-md-6">
                        <label for="inputsold">Video</label>
                        @Html.EditorFor(model => model.Video, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputsold", @placeholder = "30 fps" }
