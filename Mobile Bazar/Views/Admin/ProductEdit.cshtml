@model MyApp.Model.ProductModel

@{
    ViewBag.Title = "ProductEdit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@{
    if (@ViewData["Added"] != null)
    {
        if (ViewData["Added"].Equals("True"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <p class="text-center">Added Succesfully</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <p class="text-center">Failed to Add!</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
}
<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("ProductEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-12", id = Model.ProductID }))
        {
            @Html.HiddenFor(model => model.ProductID)
            <div class="form-group">
                <label for="inputName">Product Name</label>
                @Html.EditorFor(model => model.ProductName, new
                {
                    htmlAttributes =
               new { @class = "form-control", @id = "inputName", @placeholder = "Samsung Galaxy S7" }
                })
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputbrand">Brand</label>
                    @Html.EditorFor(model => model.Brand, new
                    {
                        htmlAttributes =
                        new { @class = "form-control", @id = "inputbrand", @placeholder = "Samsung" }
                    })
                </div>
                <div class="form-group col-md-6">
                    <label for="inputwarranty">Warranty</label>
                    @Html.EditorFor(model => model.Warranty, new
                   {
                       htmlAttributes =
                       new { @class = "form-control", @id = "inputwarranty", @placeholder = "Warranty" }
                   })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputquant">Quantity</label>
                    @Html.EditorFor(model => model.Quantity, new
                   {
                       htmlAttributes =
                       new { @type = "number", @class = "form-control", @id = "inputquant", @placeholder = 10 }
                   })
                </div>
            </div>

            <div class="form-group">
                <label for="inputprice">Price in TAKA</label>
                @Html.EditorFor(model => model.Price, new
                   {
                       htmlAttributes =
                       new { @type = "number", @class = "form-control", @id = "inputprice" }
                   })
            </div>

            <div class="form-group">
                <label for="inputprice">Release Year</label>
                @Html.EditorFor(model => model.ReleaseYear, new
                   {
                       htmlAttributes =
                       new { @type = "number", @class = "form-control", @id = "inputprice" }
                   })
            </div>

            <fieldset class="border rounded rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Display</legend>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputquant">Type</label>
                        @Html.EditorFor(model => model.DisplayType, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "ppd" }
                        })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputsold">Size</label>
                        @Html.EditorFor(model => model.DisplaySize, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputsold", @placeholder = "9.45 inch" }
                        })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputsold">Resolution</label>
                        @Html.EditorFor(model => model.Resolution, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputsold", @placeholder = "1920*1080" }
                        })
                    </div>
                </div>

            </fieldset>

            <fieldset class="border rounded col-md-12">
                <legend style="width: auto" class="text-uppercase">Camera</legend>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputquant">Selfie Camera</label>
                        @Html.EditorFor(model => model.SelfieCamera, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputquant", @placeholder = "30 megapx" }
                        })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputsold">Main Camera</label>
                        @Html.EditorFor(model => model.MainCamera, new
                        {
                            htmlAttributes =
                            new { @type = "text", @class = "form-control", @id = "inputsold", @placeholder = "20 megapx" }
                        })
                    </div>
                </div>

            </fieldset>

            <fieldset class="border rounded col-md-12">
